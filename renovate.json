{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:js-app",
    ":rebaseStalePrs",
    ":disableRateLimiting",
    ":maintainLockFilesWeekly",
    ":label(dependencies)",
    ":assignAndReview(Mogyuchi)",
    ":automergeAll",
    ":semanticCommits",
    ":disablePrControls"
  ],
  "ignoreTests": true,
  "regexManagers": [
    {
      "fileMatch": ["(^|/)\\.npmrc$"],
      "matchStrings": ["use-node-version=(?<currentValue>.*?)\\n"],
      "datasourceTemplate": "node-version"
    }
  ]
}
